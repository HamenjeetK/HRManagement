<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="488.0" prefWidth="387.0" spacing="20.0" style="-fx-background-color: lightgrey; -fx-border-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hr_management.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="iid" layoutX="30.0" layoutY="68.0" style="-fx-border-color: black;" text="ID" />
    <TextField fx:id="iname" style="-fx-border-color: black;" text="Name" />
    <TextField fx:id="isalary" style="-fx-border-color: black;" text="Salary" />
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Button mnemonicParsing="false" onAction="#InsertClick" prefHeight="26.0" prefWidth="78.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Insert" />
          <Button mnemonicParsing="false" onAction="#UpdateClick" prefHeight="26.0" prefWidth="79.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Update" GridPane.rowIndex="1" />
          <Button mnemonicParsing="false" onAction="#DeleteClick" prefHeight="26.0" prefWidth="80.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Delete" GridPane.rowIndex="2" />
          <Button onAction="#ViewClick" style="-fx-background-color: lightblue; -fx-border-color: black;" text="View Data" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          <Button mnemonicParsing="false" onAction="#LoadDataClick" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Load Data" GridPane.columnIndex="1" />
         <Button layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#BackClick" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Back" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </children>
   </GridPane>
    <TableView fx:id="TableView" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: lightyellow; -fx-border-color: black;">
        <columns>
            <TableColumn fx:id="id" prefWidth="75.0" text="id" />
            <TableColumn fx:id="name" prefWidth="75.0" text="name" />
            <TableColumn fx:id="salary" prefWidth="75.0" text="salary" />
        </columns>
    </TableView>
</VBox>
