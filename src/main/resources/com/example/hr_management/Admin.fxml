<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane prefHeight="546.0" prefWidth="405.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hr_management.AdminController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="546.0" prefWidth="463.0" spacing="20.0" style="-fx-background-color: LIGHTGREY; -fx-border-color: black;">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
                                                    <TextField fx:id="iaid" layoutX="30.0" layoutY="68.0" style="-fx-border-color: black;" text="ID" />
          <TextField fx:id="iadmin" style="-fx-border-color: black;" text="Name" />
          <TextField fx:id="imail" style="-fx-border-color: black;" text="Email" />
          <TextField fx:id="iapswd" style="-fx-border-color: black;" text="Password" />
         <GridPane>
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#DeleteClick" prefHeight="26.0" prefWidth="84.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Delete" GridPane.rowIndex="1" />
                <Button mnemonicParsing="false" onAction="#LoadDataClick" prefHeight="26.0" prefWidth="72.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Load Data" GridPane.columnIndex="1" />
                <Button mnemonicParsing="false" onAction="#UpdateClick" prefHeight="26.0" prefWidth="84.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Update" GridPane.rowIndex="2" />
                <Button onAction="#ViewClick" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="View Data" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button mnemonicParsing="false" onAction="#InsertClick" prefHeight="30.0" prefWidth="84.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Insert" />
               <Button layoutX="193.0" layoutY="43.0" onAction="#BackClick" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: lightblue; -fx-border-color: black;" text="Back" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
         </GridPane>
          <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: lightyellow;">
              <columns>
                  <TableColumn fx:id="aid" prefWidth="75.0" text="id" />
                  <TableColumn fx:id="admin" prefWidth="75.0" text="name" />
                  <TableColumn fx:id="mail" prefWidth="75.0" text="email" />
                  <TableColumn fx:id="apswd" prefWidth="75.0" text="password" />
              </columns>
          </TableView>
      </VBox>
   </children>
</GridPane>
